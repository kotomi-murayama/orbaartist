{
    "require": {
        "php": ">=7.1.0",
        "silex/silex": "~1.0@dev",
        "chh/cache-service-provider": "~1.0",
        "ext-libevent": "*",
        "ext-curl": "*",
        "ext-sundown": "*"
    },
    "extra": {
        "heroku": {
            "document-root": "web",
            "index-document": "index.php",
            "php-config": [
                "short_open_tag=on",
                "date.timezone=Europe/Vienna"
            ],
            "engines": {
                "php": "7.1.*",
                "nginx": "1.4.*"
            },
            "compile": [
                "echo $FOO"
            ],
        }
    }
}
